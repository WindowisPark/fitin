package com.fitin.shopping.service;

import com.fitin.shopping.entity.Review;
import com.fitin.shopping.entity.ReviewImg;
import com.fitin.shopping.repository.ReviewRepository;
import lombok.RequiredArgsConstructor;
import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartFile;

import java.util.List;

@Service
@RequiredArgsConstructor
public class ReviewService {

    private final ReviewRepository reviewRepository;
    private final ReviewImgService reviewImgService;

    // 리뷰 작성 (이미지 포함)
    public Review saveReview(Review review, List<MultipartFile> imgFiles) throws Exception {
        // 리뷰 저장
        Review savedReview = reviewRepository.save(review);

        // 이미지 저장 처리
        for (MultipartFile imgFile : imgFiles) {
            reviewImgService.saveReviewImg(savedReview, imgFile);
        }

        return savedReview;
    }

    // 리뷰 삭제 시 이미지 삭제도 처리
    public void deleteReview(Long reviewId) {
        // 리뷰에 연결된 이미지 삭제
        List<ReviewImg> reviewImgs = reviewImgService.getReviewImages(reviewId);
        for (ReviewImg reviewImg : reviewImgs) {
            reviewImgService.deleteReviewImg(reviewImg.getId());
        }
        // 리뷰 삭제
        reviewRepository.deleteById(reviewId);
    }
}
