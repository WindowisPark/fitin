package com.fitin.shopping.dto;

import java.math.BigDecimal;
import java.util.List;

import com.fitin.shopping.entity.Product;

public class ProductDto {

	 private Long id;
	    private String name;
	    private String description;
	    private BigDecimal price;
	    private int stockQuantity;
	    private List<ProductImgDto> imgList;
	    
    
	// 기본 생성자
	public ProductDto(Product product, List<ProductImgDto> imgDtos) {} 
    

    public ProductDto(Long id, String name, String description, BigDecimal price, int stockQuantity) {
        this.id = id;
        this.name = name;
        this.description = description;
        this.price = price;
        this.stockQuantity = stockQuantity;
        this.imgList = imgList;  // 이미지 리스트 추가
    }

    // getter, setter

    // BigDecimal을 int로 변환하는 메서드
    public int getPriceAsInt() {
        return price.intValue();  // BigDecimal을 int로 변환
    }
}
