package com.fitin.shopping.dto;

import java.math.BigDecimal;

public class ProductDto {

    private Long id;
    private String name;
    private String description;
    private BigDecimal price; // price는 BigDecimal 타입
    private int stockQuantity;

    public ProductDto() {}

    public ProductDto(Long id, String name, String description, BigDecimal price, int stockQuantity) {
        this.id = id;
        this.name = name;
        this.description = description;
        this.price = price;
        this.stockQuantity = stockQuantity;
    }

    // getter, setter

    // BigDecimal을 int로 변환하는 메서드
    public int getPriceAsInt() {
        return price.intValue();  // BigDecimal을 int로 변환
    }
}
